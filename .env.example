# --- Обязательные переменные ---
# Токен вашего Telegram-бота
TELEGRAM_BOT_TOKEN="TELEGRAM_BOT_TOKEN"
# Ваш API-ключ от Google AI Studio
GOOGLE_API_KEY="GOOGLE_API_KEY"

PAYMENT_PROVIDER_TOKEN="PAYMENT_PROVIDER_TOKEN"

# --- Настройки базы данных PostgreSQL ---
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=malterdb
DB_HOST=db

# --- Настройки Redis ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# --- Cache Settings ---
# Время жизни кэша в секундах (по умолчанию: 600 = 10 минут)
CACHE_TTL_SECONDS=600
# Количество попыток для Redis операций при сбоях
REDIS_RETRY_ATTEMPTS=2
# Минимальная задержка между попытками (сек)
REDIS_RETRY_MIN_WAIT=0.5
# Максимальная задержка между попытками (сек)
REDIS_RETRY_MAX_WAIT=2.0

# --- Logging ---
LOG_LEVEL=INFO

# --- Security Settings ---
# JWT Secret (минимум 32 символа). Генерация: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Encryption Key для шифрования чувствительных данных в БД
# КРИТИЧЕСКИ ВАЖНО для production! Генерация: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ⚠️ НИКОГДА не коммитьте этот ключ в git! При смене ключа все зашифрованные данные станут недоступны!
ENCRYPTION_KEY=generate_new_key_for_production

# --- HTTPX Configuration ---
HTTPX_TIMEOUT=180
HTTPX_CONNECT_TIMEOUT=10